<?import bayern.steinbrecher.woodPacker.elements.PlankField?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bayern.steinbrecher.woodPacker.screens.PlankDemandScreenController">
    <HBox>
        <VBox>
            <ScrollPane fitToHeight="true"
                        fitToWidth="true"
                        VBox.vgrow="ALWAYS">
                <ListView fx:id="requiredPlanksList"
                          minWidth="300"/>
            </ScrollPane>
            <PlankField fx:id="newPlankField"/>
            <ButtonBar>
                <buttons>
                    <Button text="%add"
                            onAction="#addPlank"/>
                    <Button text="%clearAll"
                            onAction="#clearAllPlanks"/>
                    <Button text="%backToBasePlankScreen"
                            onAction="#switchToPreviousScreen"
                            ButtonBar.buttonData="BACK_PREVIOUS"/>
                </buttons>
            </ButtonBar>
        </VBox>
        <StackPane fx:id="cuttingPlanContainer"
                   HBox.hgrow="ALWAYS"
                   VBox.vgrow="ALWAYS"
                   style="-fx-border-color: black">
            <Canvas fx:id="visualPlankCuttingPlan"/>
        </StackPane>
    </HBox>
</ScrollPane>