<?import bayern.steinbrecher.woodpacker.elements.PlankList?>
<?import bayern.steinbrecher.woodpacker.elements.ScaledCanvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bayern.steinbrecher.woodpacker.screens.PlankDemandScreenController"
            fitToWidth="true"
            fitToHeight="true">
    <BorderPane>
        <left>
            <VBox>
                <HBox VBox.vgrow="ALWAYS">
                    <VBox>
                        <Label text="%basePlankList"/>
                        <PlankList fx:id="basePlankList"
                                   materialAllowed="true"
                                   VBox.vgrow="ALWAYS"/>
                    </VBox>
                    <VBox>
                        <Label text="%demandList"/>
                        <PlankList fx:id="requiredPlanksView"
                                   materialAllowed="false"
                                   VBox.vgrow="ALWAYS"/>
                    </VBox>
                </HBox>
                <ButtonBar>
                    <buttons>
                        <Button text="%exportPlanks"
                                onAction="#askUserExportPlankProblem"
                                disable="${!controller.plankProblemValid}"/>
                        <Button text="%backToMainMenu"
                                onAction="#switchToPreviousScreen"/>
                    </buttons>
                </ButtonBar>
            </VBox>
        </left>
        <center>
            <ScaledCanvas fx:id="visualPlankCuttingPlan"/>
        </center>
    </BorderPane>
</ScrollPane>