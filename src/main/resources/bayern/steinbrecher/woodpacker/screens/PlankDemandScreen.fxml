<?import bayern.steinbrecher.woodpacker.elements.PlankField?>
<?import bayern.steinbrecher.woodpacker.elements.ScaledCanvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bayern.steinbrecher.woodpacker.screens.PlankDemandScreenController"
            fitToWidth="true"
            fitToHeight="true">
    <BorderPane>
        <left>
            <VBox>
                <ScrollPane fitToHeight="true"
                            fitToWidth="true"
                            VBox.vgrow="ALWAYS">
                    <ListView fx:id="requiredPlanksList"/>
                </ScrollPane>
                <PlankField fx:id="newPlankField"/>
                <ButtonBar>
                    <buttons>
                        <Button text="%add"
                                onAction="#addPlank"/>
                        <Button text="%clearAll"
                                onAction="#clearAllPlanks"/>
                        <Button text="%backToBasePlankScreen"
                                onAction="#switchToPreviousScreen"
                                ButtonBar.buttonData="BACK_PREVIOUS"/>
                    </buttons>
                </ButtonBar>
            </VBox>
        </left>
        <center>
            <ScaledCanvas fx:id="visualPlankCuttingPlan"/>
        </center>
    </BorderPane>
</ScrollPane>