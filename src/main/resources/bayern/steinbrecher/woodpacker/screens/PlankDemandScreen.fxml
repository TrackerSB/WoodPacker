<?import bayern.steinbrecher.checkedElements.CheckedComboBox?>
<?import bayern.steinbrecher.woodpacker.elements.PlankList?>
<?import bayern.steinbrecher.woodpacker.elements.ScaledCanvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bayern.steinbrecher.woodpacker.screens.PlankDemandScreenController"
            fitToWidth="true"
            fitToHeight="true">
    <BorderPane>
        <left>
            <HBox>
                <VBox>
                    <PlankList fx:id="basePlankList"
                               VBox.vgrow="ALWAYS"/>
                    <CheckedComboBox fx:id="materialSelection"/>
                </VBox>
                <VBox>
                    <PlankList fx:id="requiredPlanksView"
                               VBox.vgrow="ALWAYS"/>
                    <ButtonBar>
                        <buttons>
                            <Button text="%exportPlanks"
                                    onAction="#askUserExportPlankProblem"
                                    disable="${!controller.plankProblemValid}"/>
                            <Button text="%backToBasePlankScreen"
                                    onAction="#switchToPreviousScreen"/>
                        </buttons>
                    </ButtonBar>
                </VBox>
            </HBox>
        </left>
        <center>
            <ScaledCanvas fx:id="visualPlankCuttingPlan"/>
        </center>
    </BorderPane>
</ScrollPane>