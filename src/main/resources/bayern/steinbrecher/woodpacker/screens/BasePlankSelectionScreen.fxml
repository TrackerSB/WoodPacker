<?import bayern.steinbrecher.checkedElements.CheckedComboBox?>
<?import bayern.steinbrecher.woodpacker.elements.PlankList?>
<?import bayern.steinbrecher.woodpacker.elements.ScaledCanvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bayern.steinbrecher.woodpacker.screens.BasePlankSelectionScreenController"
            fitToHeight="true"
            fitToWidth="true">
    <BorderPane>
        <left>
            <VBox>
                <PlankList fx:id="basePlankList"/>
                <CheckedComboBox fx:id="materialSelection"/>
            </VBox>
        </left>
        <center>
            <VBox>
                <ScaledCanvas fx:id="basePlankPreview"
                              VBox.vgrow="ALWAYS"/>
                <Button text="%selectBasePlank"
                        onAction="#confirmBasePlank"
                        disable="${!basePlankList.plankSelected}"/>
            </VBox>
        </center>
    </BorderPane>
</ScrollPane>
